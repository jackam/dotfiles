#!/opt/homebrew/bin/bash

# use recent bash version if homebrew is installed
if [[ -d "/opt/homebrew/bin" ]]; then 
	export PATH="/opt/homebrew/bin:$PATH"
fi

if [[ -f "/Users/jack/Library/Python/3.9" ]]; then
	export PATH="/Users/jack/Library/Python/3.9/bin:$PATH"
fi

export PS1='\[\033[01;32m\]\u@\h:\[\033[01;34m\]\w\$\[\033[0m\] '

if [[ -f "${HOME}/.local/share/toolbox" ]]; then 
	source "${HOME}/.local/share/toolbox/toolbox.sh"
fi

# alias / shortcut {
	alias l='ls -Ga'
	alias ll='ls -Glah'
	alias ls='ls -G'
	alias ..='cd ..'
# }












